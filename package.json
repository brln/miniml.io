{
  "name": "miniml.io",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "cd app && rm -rf node_modules && npm install && (PUBLIC_URL='/app' npm run build &) && cd .. && npx sequelize-cli db:migrate && node ./bin/babel.www",
    "dev": "cd app && (npm start &) && cd .. && node-dev --max-old-space-size=8192 ./bin/babel.www",
    "backend-dev": "node-dev --max-old-space-size=8192 ./bin/babel.www",
    "frontend-dev": "cd app && npm start",
    "init-db": "cd /usr/local/mysql/bin/ && echo 'DROP DATABASE IF EXISTS miniml; CREATE DATABASE miniml CHARACTER SET utf8 COLLATE utf8_general_ci' | ./mysql -u miniml -p && cd -",
    "lint": "(npx eslint . --ignore-pattern '/app/') && (cd app && npx eslint .)",
    "lintfix": "(npx eslint . --ignore-pattern '/app/' --fix) && (cd app && npx eslint . --fix)",
    "migrate-down": "npx sequelize-cli db:migrate:undo",
    "migrate": "npx sequelize-cli db:migrate"
  },
  "dependencies": {
    "aws-sdk": "^2.528.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "faker": "^4.1.0",
    "immutable": "^4.0.0-rc.12",
    "imurmurhash": "^0.1.4",
    "jsonwebtoken": "^8.5.1",
    "mailparser": "^2.7.7",
    "moment-timezone": "^0.5.27",
    "morgan": "^1.9.1",
    "mysql2": "^2.0.0",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.6.0",
    "node-html-parser": "^1.2.4",
    "node-object-hash": "^2.0.0",
    "oauth-1.0a": "^2.2.6",
    "rss-parser": "^3.7.5",
    "sequelize": "^5.21.2",
    "shared-dependencies": "./shared-dependencies",
    "stripe": "^8.17.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "node-dev": "^4.0.0",
    "nodemon": "^1.19.2",
    "remote-redux-devtools": "^0.5.16",
    "sequelize-cli": "^5.5.1",
    "terser": "3.14.1"
  }
}
